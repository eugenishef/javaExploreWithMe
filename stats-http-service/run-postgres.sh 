#!/bin/bash

docker stop stats-db || true
docker rm stats-db || true

docker run -d \
  --name stats-db \
  -e POSTGRES_DB=stats_db \
  -e POSTGRES_USER=postgres \
  -e POSTGRES_PASSWORD=postgres \
  -p 5432:5432 \
  postgres:16.1

if [ $? -eq 0 ]; then
  echo "База данных 'stats_db' успешно создана и запущена."
else
  echo "Не удалось создать или запустить базу данных."
fi